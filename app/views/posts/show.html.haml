.posts-wrapper.row
  .post
    .post-head
      .name
        Jakub Piotrowski
    .image.center-block
      = image_tag @post.image.url(:medium)
    %p.caption
      = @post.caption
    .text-center
      = link_to "Edit Post", edit_post_path(@post), { class: 'btn btn-primary'}
      = link_to "Return", posts_path, { class: 'btn btn-default'}
